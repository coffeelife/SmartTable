<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/iv_channel_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/icon_menu_default" />

    <TextView
        android:id="@+id/tv_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_channel_logo"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="12dp"
        tools:text="菜单" />

    <View
        android:id="@+id/view_redpoint"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/iv_channel_logo"
        android:layout_alignRight="@+id/iv_channel_logo"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-10dp"
        android:background="@drawable/shape_circle_redpoint"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>